@using Library_ASP.NET_MVC.Models
@model List<Book>
@{
    Layout = null;
}


<div>
    <a href="/Home/Index">Home</a>
    <br />
    <a href="/BookManager/Create">Add Book</a>
    <br />
</div>

@using (Html.BeginForm("ManagerGeneral", "BookManager", FormMethod.Post))
{

    <ol>
        @for (int i = 0; i < Model.Count; i++)
        {
            <li>@Html.RadioButton($"Book", $"{Model[i].Id}", new { id = $"Is{Model[i].Id}" }) @Model[i].Name </li>
        }

    </ol>
    <input type="submit" name="EditeBook" value="EditeBook" />
    <input type="submit" name="DeleteBook" value="DeleteBook" />
}

